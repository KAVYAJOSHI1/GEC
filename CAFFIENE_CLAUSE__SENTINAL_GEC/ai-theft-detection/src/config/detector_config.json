{
  "confidence_threshold": 0.15,
  "history_size": 15,
  "language": "zh",
  "use_adaptive_weights": true,
  "learning_rate": 0.1,
  "initial_behavior_weights": {
    "Covering Product Area": 0.6,
    "Unusual Elbow Position": 0.6,
    "Repetitive Position Adjustment": 0.6,
    "Suspected Tag Removal": 0.5,
    "Suspicious Item Handling": 0.8,
    "Rapid Item Concealment": 0.8,
    "Abnormal Arm Position": 0.7,
    "Suspicious Crouching": 0.7,
    "Unusual Reaching": 0.7,
    "Body Shielding": 0.7,
