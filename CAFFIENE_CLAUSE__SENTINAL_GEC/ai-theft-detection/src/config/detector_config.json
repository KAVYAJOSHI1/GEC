    "Single Arm Hiding": 0.8,
    "Concealment Gesture": 0.7,
    "Distraction Behavior": 0.8,
    "Group Theft Coordination": 0.8
  },
  "model_weights": {
    "ml_model_weight": 0.4,
    "rule_engine_weight": 0.6,
    "behavior_classifier_weight": 0.7
  },
  "behavior_classifier_path": "models/theft_xgb_model.pkl",
  "behavior_thresholds": {
    "Taking Object": 0.35,
    "Hiding Item": 0.35,
    "Looking Around": 0.35,
    "Sneaking": 0.35,
    "Normal Shopping": 0.6,
    "Checking Product": 0.6
  },
  "default_behavior_threshold": 0.3,
  "retail_environment": {
    "enabled": true,
    "confidence_boost": 0.2,
    "required_objects": ["shelf", "product", "display"],
    "boost_behaviors": ["Rapid Item Concealment", "Suspicious Item Handling", "Taking Object", "Hiding Item", "Single Arm Hiding"]
  },
  "detection_parameters": {
    "motion_threshold": 0.01,
    "rapid_motion_threshold": 0.03,
    "concentrated_motion_ratio": 0.2,
    "arm_angle_threshold": 75,
    "wrist_distance_threshold": 120,
    "hip_knee_ratio": 0.15,
    "proximity_threshold": 50,
    "head_angle_threshold": 45,
    "group_distance_threshold": 150,
    "interaction_time_threshold": 3,
    "distraction_movement_threshold": 0.05,
    "concealment_detection": {
      "min_frames": 5,
      "min_confidence": 0.5,
      "consecutive_frames": 3
    }
  },
  "feature_normalization": {
    "enabled": true,
    "method": "minmax",
    "params": {
      "left_wrist_dist": {"min": 0, "max": 300},
      "right_wrist_dist": {"min": 0, "max": 300},
      "torso_height": {"min": 0, "max": 400},
      "left_arm_angle": {"min": 0, "max": 180},
      "right_arm_angle": {"min": 0, "max": 180},
      "wrist_hip_ratio_left": {"min": -1, "max": 1},
      "wrist_hip_ratio_right": {"min": -1, "max": 1},
      "arms_crossed": {"min": 0, "max": 1},
      "torso_rotation": {"min": 0, "max": 90},
      "shoulder_width": {"min": 0, "max": 200},
      "head_position": {"min": -100, "max": 100},
      "knee_hip_ratio": {"min": 0, "max": 2}
    }
  },
  "behavior_mapping": {
    "Taking Object": ["Suspicious Item Handling", "Unusual Reaching"],
    "Hiding Item": ["Rapid Item Concealment", "Body Shielding", "Single Arm Hiding"],
    "Looking Around": ["Abnormal Head Movement", "Repetitive Position Adjustment"],
    "Sneaking": ["Suspicious Crouching", "Abnormal Arm Position"]
  },
  "tracker": {
    "max_disappeared": 30,
    "distance_threshold": 100,
    "min_detection_confidence": 0.3,
    "tracking_method": "iou"
  },
